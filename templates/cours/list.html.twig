{% extends 'base.html.twig' %}


{% block Contenu %}
<h3>Liste des cours</h3>
<table class="table table-striped table-hover">
    <thead>
        <tr>
        <th scope="col">Id</th>
        <th scope="col">Heure de debut</th>
        <th scope="col">Heure de fin</th>
        <th scope="col">Type</th>
        <th scope="col">professeur</th>
        <th scope="col">Action</th>
        </tr>
    </thead>
    {% for cour in list %}
        <tbody>
            <tr>
                <th scope="row">{{cour.id}}</th>
                <td>{{cour.toStringDateDebut}}</td>
                <td>{{cour.toStringDateFin}}</td>
                <td>{{cour.type}}</td>
                <td>{{cour.professeur}}</td>
                <td>
                {% if app.user.email == cour.professeur.email %}
                    <a  href="{{ path('cours_edit',{id:cour.id}) }}">Editer</a>
                    <a  href="{{ path('cours_delete',{id:cour.id}) }}">Supprimer</a>
                {% endif %}        
                </td>
            </tr>
        </tbody>
    {% endfor %}
</table>

{% endblock %}

