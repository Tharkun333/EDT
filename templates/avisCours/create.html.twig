        </div>
        <div class="form-group colLabel">
            {{ form_label(form.cours, 'Cours', {'label_attr': {'class': 'control-label'}}) }}
            {{ form_widget(form.cours, {'attr': {'class': 'form-control','disabled': 'disabled'}}) }}
            {{ form_errors(form.cours)}}
        </div>
        <div class="row" style="margin-top: 10px">
            <div class="col-md-8"></div>
            <div class="col-md-2"> 
                <a class="btn btn-secondary" href="{{ url('avisCours_list') }}" >Annuler</a> 
            </div>
            <div class="col-md-2"> 
                {{ form_widget(form.Enregistrer, {'attr': {'class': 'btn btn-primary'}}) }}
