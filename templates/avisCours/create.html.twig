<center>
<div class="row">
<div class="col-md-12"></div>
    {{form_start(form)}}
    <div class="col-md-3"></div>
    <div class="col-md-6"> 
        <div class="form-group colLabel">
            {{ form_label(form.note, 'Note du cours', {'label_attr': {'class': 'control-label'}}) }}
            {{ form_widget(form.note, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.note)}}
        </div>
        <div class="form-group colLabel">
            {{ form_label(form.commentaire, 'Commentaire', {'label_attr': {'class': 'control-label'}}) }}
            {{ form_widget(form.commentaire, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.commentaire)}}
        </div>
