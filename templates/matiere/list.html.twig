{% extends 'base.html.twig' %}


{% block Contenu %}
<h3>Liste des mati√®res</h3>
<table class="table table-striped table-hover">
    <thead>
        <tr>
        <th scope="col">Id</th>
        <th scope="col">Tire</th>
        <th scope="col">Reference</th>
        <th scope="col">Professeur(s)</th>
        </tr>
    </thead>
    {% for matieres in list %}
        <tbody>
            <tr>
                <th scope="row" class="align-middle" >{{matieres.id}}</th>
                <td class="align-middle">{{matieres.titre}}</td>
                <td class="align-middle">{{matieres.reference}}</td>
                <td class="align-middle">{% for professeur in matieres.professeurs %}
                {{professeur.prenom}} {{professeur.nom}} <br>
                {% endfor %}            
                </td>
            </tr>
        </tbody>
    {% endfor %}
</table>

{% endblock %}

